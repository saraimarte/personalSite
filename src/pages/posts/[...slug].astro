---
import MainLayout from '@layouts/MainLayout.astro';
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Tag from '@components/Tag.astro';
import BackBtn from '@components/BackBtn.astro';

import {formatDate} from '../../utils';

export async function getStaticPaths(){
    const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog');

    return  allBlogArticles.map(entry => ({
        params:{
            slug: entry.slug
        },
        props:{entry}
    }));
}

const { entry } = Astro.props;
const {Content} = await entry.render();

---


<MainLayout>

    <div class = "container">
        <BackBtn link = "/posts"></BackBtn>
        <h1 class = "title">{entry.data.title}</h1>
        <h2 class = "date">{formatDate(entry.data.pubDate)}</h2>
        <Tag tags = {entry.data.tags}></Tag>

        <Content>
        </Content>

    </div>

</MainLayout>

<style>
    .container{
        height:100%;
        width:50%;
        margin:auto;
        padding:20px;
        background-color: #F2F3F4;
        display:flex;
        flex-direction: column;
        color:#4D5E6A;
        font-size:1.2rem;
    }

    @media (max-width: 1000px) {
      .container{
        width:80%;
       }
      }

    @media (max-width: 600px) {
      .container{
        width:100%;
        padding:20px;
        padding-right:25px; /* so that the Card comp looks centered in the content and not too much to the right*/
       }
      }

    .title {
        margin: 10px 5px 0;
        font-size: 1.4rem;
        overflow: hidden;
        width: 90%;
        min-height: 2rem;
    }

    .date {
        margin: 10px 5px;
        font-size: 1.2rem;
    }
    @media (max-width: 600px) {
        .title {
            height: min-content;
            min-height: 4rem;
        }
    }

    @media (max-width: 768px) {
        .title {
            height: 65px;
        }
    }


</style>