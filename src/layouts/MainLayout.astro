---
import '@styles/Global.css';
const {pageTitle} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<slot></slot>
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Goudy+Bookletter+1911&family=Merienda:wght@300..900&family=Oswald:wght@200..700&display=swap');
	
	.container{
		border:5px solid red;
		height:100%;
		width:100%;
	}
</style>